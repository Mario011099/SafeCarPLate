<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityPrueba">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPlacaPrueba"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

        <Button
            android:id="@+id/buttonPrueba"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bottoms"
            android:drawableBottom="@drawable/upload_photo"
            android:enabled="true"
            android:text="@string/photo_bottom" />

        <ImageView
            android:id="@+id/imgViewResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>